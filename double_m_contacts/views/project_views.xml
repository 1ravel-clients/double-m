<?xml version='1.0' encoding='utf-8'?>
<odoo>

<record id="view_task_form_inherit" model="ir.ui.view">
    <field name="name">view_task_form_inherit</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_form2"/>
    <field name="arch" type="xml">
        <!-- Hide customer field -->
        <xpath expr="//field[@name='partner_id']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='partner_id']" position="after">
            <field name="contact_id"/>
            <field name="contact_phone"/>
            <field name="current_user_id" invisible="1"/>
            <field name="current_user_country" invisible="1"/>
        </xpath>
        <xpath expr="//notebook" position="inside">
           <page name="contact" string="Contacts &amp; Addresses">
                <field name="contact_info_ids">
                    <list editable="bottom" create="false">
                        <field name="name"/>
                        <field name="current_user_id" invisible="1"/>
                        <field name="current_user_country" invisible="1"/>
                        <field name="phone" />
                    </list>

                    <kanban>
                        <field name="id"/>
                        <field name="color"/>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="email"/>
                        <field name="parent_id"/>
                        <field name="is_company"/>
                        <field name="function"/>
                        <field name="phone"/>
                        <field name="street"/>
                        <field name="street2"/>
                        <field name="zip"/>
                        <field name="city"/>
                        <field name="country_id"/>
                        <field name="state_id"/>
                        <field name="image_128"/>
                        <field name="lang"/>
                        <!-- fields in form x2many view to diminish requests -->
                        <field name="comment"/>
                        <field name="display_name"/>
                        <templates>
                            <t t-name="kanban-box">
                                <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                <div t-att-class="color + ' oe_kanban_global_click'">
                                    <div class="o_kanban_image">
                                        <img alt="Contact image" t-if="record.image_128.raw_value" t-att-src="kanban_image('res.partner', 'image_128', record.id.raw_value)"/>
                                        <t t-if="!record.image_128.raw_value">
                                            <img alt="Delivery" t-if="record.type.raw_value === 'delivery'" t-att-src="_s + &quot;/base/static/img/truck.png&quot;"/>
                                            <img alt="Invoice" t-if="record.type.raw_value === 'invoice'" t-att-src="_s + &quot;/base/static/img/money.png&quot;"/>
                                            <t t-if="record.type.raw_value !== 'invoice' &amp;&amp; record.type.raw_value !== 'delivery'">
                                                <img alt="Logo" t-if="record.is_company.raw_value === true" t-att-src="_s + &quot;/base/static/img/company_image.png&quot;"/>
                                                <img alt="Avatar" t-if="record.is_company.raw_value === false" t-att-src="_s + &quot;/base/static/img/avatar_grey.png&quot;"/>
                                            </t>
                                        </t>
                                    </div>
                                    <div class="oe_kanban_details">
                                        <field name="name"/>
                                        <div t-if="record.function.raw_value"><field name="function"/></div>
                                        <div t-if="record.email.raw_value"><field name="email" widget="email"/></div>
                                        <div t-if="record.type.raw_value != 'contact'">
                                            <div>
                                                <field name="zip"/>
                                                <field name="city"/>
                                            </div>
                                            <field t-if="record.state_id.raw_value" name="state_id"/>
                                            <field name="country_id"/>
                                        </div>
                                        <div t-if="record.phone.raw_value">Phone: <t t-esc="record.phone.value"/></div>
                                    </div>
                                </div>
                            </t>
                        </templates>
                    </kanban>



                    <form string="Contact / Address">
                        <sheet>
                            <field name="type" required="1" widget="radio" options="{'horizontal': true}"/>
                            <field name="parent_id" invisible="1"/>
                            <hr/>
                            <group col="12">
                                <group colspan="5">
                                    <field name="name" string="Contact Name" required="type == 'contact'"/>
                                    <field name="function" placeholder="e.g. Sales Director" invisible="type != 'contact'"/>
                                    <label for="street" string="Address" invisible="type == 'contact'"/>
                                    <div invisible="type == 'contact'">
                                        <div class="o_address_format" name="div_address">
                                            <field name="street" placeholder="Street..." class="o_address_street"/>
                                            <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                            <field name="city" placeholder="City" class="o_address_city"/>
                                            <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                            <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                            <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                        </div>
                                    </div>
                                    <field name="comment" placeholder="Internal notes..."/>
                                </group>
                                <group colspan="5">
                                    <field name="current_user_id" invisible="1"/>
                                    <field name="current_user_country" invisible="1"/>
                                    <field name="email" widget="email"/>
                                    <field name="phone" invisible="current_user_country == 'vietnam'"/>
                                    <field name="contact_phone_gcalls" widget="outbound_call" invisible="current_user_country == 'indo'"/>
                                    <field name="company_id" invisible="1"/>
                                </group>
                                <group colspan="1">
                                    <field name="image_1920" widget="image" class="oe_avatar" nolabel="1" options="{'image_preview': 'image_128'}"/>
                                </group>
                            </group>
                            <group>
                                <button name="action_make_biz_call" type="object" string="Make Call" class="oe_highlight" invisible="current_user_country == 'vietnam'"/>
                            </group>
                            <field name="lang" invisible="1"/>
                            <field name="user_id" invisible="1"/>
                            <field name="image_128" invisible="1"/>
                        </sheet>
                    </form>



                    <!-- <form string="Contact information">
                        <header>
                            <field name="current_user_id" invisible="1"/>
                            <field name="current_user_country" invisible="1"/>

                        </header>
                        <sheet>
                            <group>
                                <field name="name"/>
                                <field name="phone" attrs="{'invisible': [('current_user_country', '=', 'vietnam')]}"/>
                                <field name="contact_phone_gcalls" widget="outbound_call" attrs="{'invisible': [('current_user_country', '=', 'indo')]}"/>
                            </group>
                            <group>
                                <button name="action_make_biz_call" type="object" string="Make Call" class="oe_highlight" attrs="{'invisible': [('current_user_country', '=', 'vietnam')]}"/>
                            </group>
                        </sheet>
                    </form> -->
                </field>
           </page>
        </xpath>
    </field>
</record>

</odoo>
